<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'ball_texture.png'         

<PongPaddle>:
    size: 50, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'paddle_texture.png'

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    winner_label: winner_label_id  # Оновлено id для використання з великої літери

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    Button:
        text: 'Start'
        size_hint: None, None
        size: 100, 50
        pos: root.width - 120, root.top - 60
        on_release: root.start_game()

    Button:
        text: 'Pause'
        size_hint: None, None
        size: 100, 50
        pos: root.width - 120, root.top - 120
        on_release: root.pause_game()

    Button:
        text: 'Reset'
        size_hint: None, None
        size: 100, 50
        pos: root.width - 120, root.top - 180
        on_release: root.reset_game()

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    Label:
        id: winner_label_id
        font_size: 70
        center_x: root.width / 2
        center_y: root.height / 3
        size_hint: None, None
        size: self.texture_size
        text: ''
    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
